﻿﻿@{
    ViewBag.Titulo = "Visualização de Pacientes";
}

@model VisualizarPacienteViewModel;

<a class="btn btn-primary" asp-action="Cadastrar">
    <i class="bi bi-plus"></i>
    Cadastrar novo/a
</a>

<div class="row g-3 mt-4">
    @foreach (DetalhesPacienteViewModel m in Model.Registros)
    {
        <div class="col-md-4 col-lg-3">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">@m.Nome</h5>
                    <p class="card-text mb-0"><strong>Telefone:</strong> @m.Telefone</p>
                    <p class="card-text mb-0"><strong>Cartão do Sus:</strong> @m.CartaoSus</p>
                    <p class="card-text mb-0"><strong>CPF:</strong> @m.Cpf</p>
                </div>
                <div class="card-actions ms-auto me-3 mb-3 d-flex gap-1">
                    <a class="btn btn-sm btn-primary rounded-circle d-flex justify-content-center align-items-center"
                       style="height: 35px; width: 35px;"
                       asp-action="Editar"
                       asp-route-id="@m.Id">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <a class="btn btn-sm btn-danger rounded-circle d-flex justify-content-center align-items-center"
                       style="height: 35px; width: 35px;"
                       asp-action="Excluir"
                       asp-route-id="@m.Id">
                        <i class="bi bi-trash2"></i>
                    </a>
                </div>
            </div>
        </div>
    }
</div>