﻿@{
    ViewBag.Titulo = "Exclusão de Pacientes";
}

@model ExcluirPacienteViewModel;

<div class="row justify-content-center">
    <form class="col-lg-8 col-xl-6" asp-action="Excluir" method="post">
        <p>Deseja realmente excluir o paciente "@Model.Nome"?</p>

        <input asp-for="Nome" type="hidden" />

        <div class="d-flex gap-2 justify-content-end">
            <a asp-action="Index" class="btn btn-outline-primary px-5">Voltar</a>
            <button class="btn btn-danger px-5">Confirmar</button>
        </div>
    </form>
</div>